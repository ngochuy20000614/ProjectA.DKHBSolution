@model ProjectA.Models.SinhVien

@{
    ViewData["Title"] = "Confirmation";
}

<p class="p-3 alert-danger">Are you sure you want to delete this?</p>

<div>
    <p class="h3">@Model.TenSinhVien</p>
    <hr />
    <dl class="row">
        <dt class="col-sm-2"><label asp-for="IdSinhVien"></label></dt>
        <dd class="col-sm-10">@Model.IdSinhVien</dd>
        <dt class="col-sm-2"><label asp-for="TenSinhVien"></label></dt>
        <dd class="col-sm-10">@Model.TenSinhVien</dd>
        <dt class="col-sm-2"><label asp-for="IdLop"></label></dt>
        <dd class="col-sm-10">@Model.IdLop</dd>
        <dt class="col-sm-2"><label asp-for="NgaySinh"></label></dt>
        <dd class="col-sm-10">@Model.NgaySinh</dd>
        <dt class="col-sm-2"><label asp-for="Email"></label></dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2"><label asp-for="PasswordSv"></label></dt>
        <dd class="col-sm-10">@Model.PasswordSv</dd>
        <dt class="col-sm-2"><label asp-for="SoDienThoai"></label></dt>
        <dd class="col-sm-10">@Model.SoDienThoai</dd>
        <dt class="col-sm-2"><label asp-for="GioiTinh"></label></dt>
        <dd class="col-sm-10">@Model.GioiTinh</dd>
        <dt class="col-sm-2"><label asp-for="DiaChi"></label></dt>
        <dd class="col-sm-10">@Model.DiaChi</dd>
    </dl>
</div>

<hr />

<form asp-action="Delete">
    <input type="hidden" asp-for="IdSinhVien" />
    <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm" 
           onclick="return confirm('Bạn chắc chắn muốn xóa sinh viên này?')"/> |
    
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Back to List</a>
</form>